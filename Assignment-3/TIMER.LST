 0000           cpu "8085.tbl"            ;      CPU Table monitor command
 0000           hof "int8"                ;      HEX Format
                
 9000           org 9000h                 ;      Puts location pointer at prompt at 9000
                
                ;Pneumonics
 030E =         GTHEX: EQU 030EH          ;      This routinue collects the hex digits entered from keyboard
 0389 =         OUTPUT: EQU 0389H         ;      Outputs characters to display
 02BE =         CLEAR: EQU 02BEH          ;      Clears the display 
 044C =         UPDDT: EQU 044CH          ;      Update data field display   
 0440 =         UPDAD: EQU 0440H          ;      Update the address field display 
 8FEF =         CURAD: EQU 8FEFH          ;      Displays the number stored in the address field of UPDAD
 8FF1 =         CURDT: EQU 8FF1H          ;      Stores 8bit data and shows in the Data display.
 03BA =         RDKBD: EQU 03BAH
                  
 9000 CDBE02    CALL CLEAR
                
 9003 3E00      MVI A,00H
 9005 0600      MVI B,00H
 9007 CD0E03    Call GTHEX   				; Take input for  timer
 900A 62        MOV H,D
 900B 6B        MOV L,E
 900C 220091    SHLD 9100H
 900F CDBE02    Call CLEAR
                
 9012 3E00      MVI A,00H
 9014 0600      MVI B,00H
 9016 CD0E03    Call GTHEX
 9019 7B        MOV A, E
 901A 2A0091    LHLD 9100H
                
 901D 32F18F    STA CURDT 
 9020 22EF8F    SHLD CURAD 
                
 9023 CD4004    CALL UPDAD                
 9026 CD4C04    CALL UPDDT  
                
 9029 CDBA03    CALL RDKBD 
                	
 902C 2AEF8F    LHLD CURAD
 902F 3AF18F    LDA CURDT
                
 9032 C33A90    JMP SEC
                
                
 9035           MIN:                                    ;      Store data in HL at address of CURAD 
 9035 22EF8F    SHLD CURAD
 9038 3E59      MVI A,59H                
                
 903A           SEC:
                                        
 903A 32F18F    STA CURDT                 ;      Store content of Accumulator in CURDT
 903D CD4004    CALL UPDAD                ;      Update Address field display 
                
 9040 CD4C04    CALL UPDDT                ;      Show the data display
 9043 CD7490    CALL DELAY                ;      Call function DELAY
                
 9046 3E0B      MVI A,0BH
 9048 30        SIM						;check after each second if any interrupt is
 9049 FB        EI
                
                
 904A 3AF18F    LDA CURDT                  
 904D 0699      MVI B,99H
 904F 80        ADD B                 ;      Increment the value of data display by 1
 9050 27        DAA                       
 9051 FE99      CPI 99H                   ;      Compare the value in accumulator with 60H
 9053 C23A90    JNZ SEC                   ;      If the value in accumulator is not 60 then jump to SEC function 
                
                ;If the value of seconds hand is 60 it must be put to 0 and update Minutes hand.
                
 9056 2AEF8F    LHLD CURAD                
                
 9059 7D        MOV A,L                   
 905A 0699      MVI B,99H
 905C 80        ADD B                 
 905D 27        DAA                     
 905E 6F        MOV L,A                  
                
 905F FE99      CPI 99H                   ;      Compare the value in accumulator to 60H
 9061 C23590    JNZ MIN                   ;      If the value in accumulator is not 60 them jump to MIN function
                
                ;If the value of minutes hand is 60 it must be put to 0 and update Hours hand.
                
 9064 2E59      MVI L,59H                 
 9066 7C        MOV A,H                   
 9067 0699      MVI B,99H
 9069 80        ADD B                   
 906A 27        DAA                      
 906B 67        MOV H,A                   
                
 906C FE99      CPI 99H                   ;      Compare the value in accumulator to 12 ( max hour hand is 12 )
 906E C23590    JNZ MIN                   ;      If the value in accumulator is not 12 jump to MIN function
 9071 C38B90    JMP END                 ;      Unconditional jump to BEGIN function 
                
                ; If hours hand exceeds 11 we need to change it to 0
                
 9074           DELAY:                    ;      Delay function
 9074 0E03      MVI C,03H                 
                
 9076           OUTLOOP:                  ;      OUTLOOP function
 9076 1100A7    LXI D,0A700H               ;      Loads the value 9FFFH into DE register
                
 9079           INLOOP:                   ;      INLOOP function
 9079 1B        DCX D                    
 907A 7A        MOV A,D                   
 907B B3        ORA E                    
 907C C27990    JNZ INLOOP                
 907F 0D        DCR C                     
 9080 C27690    JNZ OUTLOOP               ;      As long as the memory of C is not 00H jump to OUTLOOP
 9083 C9        RET                       ;      Return 
                
 9084           INTR:  						;ISR to store values of program
 9084 F5        	PUSH PSW
 9085 CDBA03    	CALL RDKBD 			
 9088 F1        	POP PSW					;values
 9089 FB        	EI
 908A C9        	RET
                
                
 908B           END:
 908B EF        RST 5
 908C           	END
